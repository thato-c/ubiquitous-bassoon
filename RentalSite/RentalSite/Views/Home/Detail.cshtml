@using RentalSite.ViewModels
@model PropertyViewModel

<h1>Property Details</h1>

<form>
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Province">Province</label>
        <input asp-for="Province" class="form-control" readonly/>
    </div>

    <div class="form-group">
        <label asp-for="City">City</label>
        <input asp-for="City" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Suburb">Suburb</label>
        <input asp-for="Suburb" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Bedrooms">Bedrooms</label>
        <input asp-for="Bedrooms" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Bathrooms">Bathrooms</label>
        <input asp-for="Bathrooms" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="ParkingSpaces">Parking Spaces</label>
        <input asp-for="ParkingSpaces" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="ERFSize">ERF Size</label>
        <input asp-for="ERFSize" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="About">About</label>
        <input asp-for="About" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Agent">Agent</label>
        <input asp-for="Agent" class="form-control" readonly />
    </div>
</form>